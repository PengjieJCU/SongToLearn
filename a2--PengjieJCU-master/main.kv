BoxLayout:
    orientation: "horizontal"
    BoxLayout:
        orientation: "vertical"
        size_hint_x:0.2
        id: entries_box
        Label:
            text: "Sort by:"
        Spinner:
            id: state_selection
            text: app.current_state
            values: app.state_codes
        Label:
            text: "Add New Song..."
        Label:
            text:"Title:"
        TextInput:
            id: user_input
            multiline: False
            on_text_validate:app.handle_pressd()
        Label:
            text:"Artist:"
        TextInput:
            id: user_input
            multiline: False
            on_text_validate:app.handle_pressd()
        Label:
            text:"Year:"
        TextInput:
            id: user_input
            multiline: False
            on_text_validate:app.handle_pressd()
        Button:
            text: "Add Song"
            on_press: app.add_songs()
            id: add_songlist
        Button:
            text:"Clear"
            on_press: app.clear_all()
    BoxLayout:
        orientation: 'vertical'

        Label:
            id: entries_box
            size_hint_y: 0.1
            text: app.message

        BoxLayout:
            id: entriesBox
            cols: 1
            orientation: "vertical"








